//Написать скрипт, который по заданным значениям чисел `a` и `b` находит `a` в степени `b`. В запросе укажите допустимые значения этих переменных (Например, если `а` - дробное, то `b` не может быть отрицательным).

function calculatePower(a, b) {

    if (typeof a !== 'number' || typeof b !== 'number') {
        return 'Введите числовые значения для a и b.';
    }
//Проверка является ли число не целым
    if (a < 0 && !Number.isInteger(b)) {
        return 'Нельзя возвести отрицательное число в дробную степень.';
    }

    let result = 1;

    for (let i = 0; i < Math.abs(b); i++) {
        result *= a;
    }

    if (b < 0) {
        result = 1 / result;
    }

    return result;
}
